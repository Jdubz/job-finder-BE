rules_version = '2';

// Firebase Storage Security Rules for Job Finder
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is an editor
    function isEditor() {
      return isAuthenticated() &&
             request.auth.token.editor == true;
    }

    // Generated documents (resumes, cover letters)
    // Users can read their own documents
    match /generated-documents/{userId}/{document=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isEditor() && request.auth.uid == userId;
      allow delete: if isEditor() && request.auth.uid == userId;
    }

    // Portfolio items and content
    match /portfolio/{userId}/{item=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isEditor() && request.auth.uid == userId;
      allow delete: if isEditor() && request.auth.uid == userId;
    }

    // User uploads (temp files, attachments)
    match /uploads/{userId}/{file=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
