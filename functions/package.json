{
  "name": "job-finder-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Job Finder Application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-templates && npm run copy-package",
    "gcp-build": "tsc && npm run copy-templates && npm run copy-package",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/*.hbs dist/templates/ 2>/dev/null || true",
    "copy-package": "cp package.json dist/package.json && node -e \"const pkg = require('./dist/package.json'); pkg.main = 'index.js'; require('fs').writeFileSync('dist/package.json', JSON.stringify(pkg, null, 2));\"",
    "serve": "npm run build && firebase emulators:start",
    "emulators:start": "bash ../scripts/emulator/start-with-persistence.sh",
    "emulators:clear": "bash ../scripts/emulator/clear-data.sh",
    "emulators:seed": "bash ../scripts/emulator/seed-test-data.sh",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run emulators:start",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase deploy --only functions -P staging",
    "deploy:production": "firebase deploy --only functions -P production",
    "deploy:firestore:staging": "firebase deploy --only firestore:rules,firestore:indexes -P staging",
    "deploy:firestore:production": "firebase deploy --only firestore:rules,firestore:indexes -P production",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:firestore-rules": "jest --testPathPattern=test/firestore/rules.test.ts",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "tsc --watch",
    "validate:indexes": "ts-node ../scripts/firestore/validate-indexes.ts"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@genkit-ai/ai": "^1.21.0",
    "@genkit-ai/core": "^1.21.0",
    "@genkit-ai/google-genai": "^1.21.0",
    "@genkit-ai/googleai": "^1.21.0",
    "@google-cloud/firestore": "^7.11.6",
    "@google-cloud/functions-framework": "^3.4.6",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.5.0",
    "@google-cloud/storage": "^7.17.2",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/generative-ai": "^0.24.1",
    "@jsdubzw/job-finder-shared-types": "^1.1.1",
    "@sparticuz/chromium": "^141.0.0",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "form-data": "^4.0.4",
    "genkit": "^1.21.0",
    "genkitx-openai": "^0.25.0",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "mailgun.js": "^12.1.0",
    "openai": "^6.3.0",
    "puppeteer-core": "^24.24.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@firebase/rules-unit-testing": "^3.0.4",
    "@types/busboy": "^1.5.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "private": true
}
