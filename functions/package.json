{
  "name": "job-finder-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Job Finder Application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-templates && npm run copy-package",
    "gcp-build": "tsc && npm run copy-templates && npm run copy-package",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/*.hbs dist/templates/ 2>/dev/null || true",
    "copy-package": "cp package.json dist/package.json && node -e \"const pkg = require('./dist/package.json'); pkg.main = 'index.js'; require('fs').writeFileSync('dist/package.json', JSON.stringify(pkg, null, 2));\"",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase deploy --only functions -P staging",
    "deploy:production": "firebase deploy --only functions -P production",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "tsc --watch"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.6",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.5.0",
    "@jsdubzw/job-finder-shared-types": "^1.0.0",
    "@types/busboy": "^1.5.4",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "form-data": "^4.0.4",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5"
  },
  "private": true
}
