{
  "name": "job-finder-backend",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Job Finder Application",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && firebase emulators:start --only functions",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "cd functions && npm run build",
    "build:watch": "cd functions && npm run dev",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase deploy --only functions --project staging",
    "logs": "firebase functions:log",
    "clean": "rm -rf dist functions/dist"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.6",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.5.0",
    "@jsdubzw/job-finder-shared-types": "^1.1.1",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "joi": "^17.13.3",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": "20"
  },
  "keywords": [
    "firebase",
    "cloud-functions",
    "job-finder",
    "job-search",
    "backend-api"
  ]
}
